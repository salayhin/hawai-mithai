<%= render partial: 'shared/header_menu' %>

<div class="row" style="margin-top: 20px;">
  <div class="col-lg-12">
    <div class="col-lg-5">
      <%= image_tag(@product.image.url(:main)) %>
    </div>
    <div class="col-lg-7">
      <h2><%= @product.name if @product.name.present? %></h2>
      <% product_description = @product.description.gsub("\n", '<br/>').gsub("  ", '&nbsp;&nbsp;').html_safe %>
      <p><%= product_description if @product.description.present? %></p>
      <hr>
      <h3>Price - <%= to_bdt @product.price if @product.price.present? %></h3>

      <p class="muted">Price is different for outside of Dhaka city</p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="muted">Place your order</h4>
      <hr>
      <% form_for @orders do |f| %>
        <div class="form-group">

          <div class="col-sm-6">
            <label for="exampleInputEmail1">Name</label>
            <%= f.input :name, :class => 'col-sm-6 form-control',:placeholder => 'Enter email' %>
          </div>

        </div>


        <button type="submit" class="btn btn-default">Submit</button>


      <% end %>
    </div>
  </div>
</div>

