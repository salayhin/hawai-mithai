<div class="row" style="margin-top: 20px;">
  <div class="col-lg-12">
    <div class="col-lg-5">
      <%= image_tag(@product.image.url(:main)) %>
    </div>
    <div class="col-lg-7">
      <h2><%= @product.name if @product.name.present? %></h2>
      <% product_description = @product.description.gsub("\n", '<br/>').gsub("  ", '&nbsp;&nbsp;').html_safe %>
      <p><%= product_description if @product.description.present? %></p>
      <hr>
      <h3>Price - <%= to_bdt @product.price if @product.price.present? %></h3>

      <p class="muted">Price is different for outside of Dhaka city</p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h4 class="muted">Place your order</h4>
      <hr>
      <%= form_for @order do |f| %>
        <%= f.hidden_field :product_id, :value => @product.id %>
        <div class="form-group">

          <div class="col-sm-6">
            <label for="exampleInputEmail1">Name</label>
            <%= f.text_field :full_name, :class => 'col-sm-6 form-control',:placeholder => 'Name' %>
          </div>

          <div class="col-sm-6">
            <label for="exampleInputEmail1">Company</label>
            <%= f.text_field :company, :class => 'col-sm-6 form-control',:placeholder => 'Company' %>
          </div>

          <div class="col-sm-6">
            <label for="exampleInputEmail1">Address</label>
            <%= f.text_field :address, :class => 'col-sm-6 form-control',:placeholder => 'Address' %>
          </div>

          <div class="col-sm-6">
            <label for="exampleInputEmail1">Delivery Address</label>
            <%= f.text_field :delivery_address, :class => 'col-sm-6 form-control',:placeholder => 'Delivery Address' %>
          </div>

          <div class="col-sm-6">
            <label for="exampleInputEmail1">Phone</label>
            <%= f.text_field :phone, :class => 'col-sm-6 form-control',:placeholder => 'Phone' %>
          </div>

          <div class="col-sm-6">
            <label for="exampleInputEmail1">Mobile</label>
            <%= f.text_field :mobile, :class => 'col-sm-6 form-control',:placeholder => 'Mobile' %>
          </div>

          <div class="col-sm-6">
            <label for="exampleInputEmail1">Quantity</label>
            <%= f.select :quantity, options_for_select(Order::QUANTITY),{}, { :class => 'form-control' } %>
          </div>

          <div class="col-sm-6">
            <br />
            <%= f.submit 'Submit', class: 'btn btn-success' %>
          </div>

        </div>


      <% end %>
    </div>
  </div>
</div>

